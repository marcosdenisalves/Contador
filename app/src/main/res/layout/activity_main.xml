<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="Resultado"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/lbl_result"
        app:layout_constraintStart_toStartOf="@id/lbl_result"
        app:layout_constraintTop_toBottomOf="@id/lbl_result" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Count"
        app:layout_constraintEnd_toEndOf="@id/txt_count"
        app:layout_constraintStart_toStartOf="@id/txt_count"
        app:layout_constraintTop_toBottomOf="@id/txt_count" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Show Result"
        app:layout_constraintEnd_toEndOf="@id/btn_one"
        app:layout_constraintStart_toStartOf="@id/btn_one"
        app:layout_constraintTop_toBottomOf="@id/btn_one" />
</androidx.constraintlayout.widget.ConstraintLayout>